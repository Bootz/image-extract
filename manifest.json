{
  "description": "Pulls images out of the current tab",
  "manifest_version": 2,
  "name": "Image extract",
  "version": "1.0",

  "permissions": ["contextMenus", "activeTab"],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
       "16": "icons/arrow-16.png",
       "32": "icons/arrow-32.png",
       "64": "icons/arrow-64.png"
    },
    "default_title": "Image extract"
  }
}
